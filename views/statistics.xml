<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='work_category_statistics_action' model='ir.actions.act_window'>
        <field name="name">Work Category Statistics</field>
        <field name="res_model">work.category</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem name="Статистика работ" id="work_category_statistics_menu" parent="report_base_menu" action="work_category_statistics_action"/>

    <record id="work_category_statistics_view_tree" model="ir.ui.view">
        <field name="name">work.category.statistics.tree</field>
        <field name="model">work.category</field>
        <field name="arch" type="xml">
            <tree>
                <button name="test" type="object" string="Test"/>
                <field name="name"/>
                <field name="total_works_time"/>
            </tree>
        </field>
    </record>
    
    
    
    <record id="work_category_statistics_view_pivot" model="ir.ui.view">
        <field name="name">work.category.pivot</field>
        <field name="model">work.category</field>
        <field name="arch" type="xml">
            <pivot string="Анализ статистики работ по категориям">
                <field name="name" type="row"/>
                <field name="total_works_time" type="col"/>
            </pivot>
        </field>
    </record>


</odoo>